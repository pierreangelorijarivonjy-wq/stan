# EduPass-MG Production Environment Variables
# Copy this file to .env.production and fill in the values

# Application
APP_NAME="EduPass-MG"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://edupass.mg
APP_PORT=8080

# Docker
DOCKER_USERNAME=karibo01
IMAGE_TAG=latest

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=edupass_prod
DB_USERNAME=edupass_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379

# Cache & Queue
QUEUE_CONNECTION=redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@edupass.mg
MAIL_FROM_NAME="${APP_NAME}"

# SMS Configuration (Madagascar)
SMS_PROVIDER=orange
SMS_API_KEY=your_sms_api_key
SMS_SENDER_NAME=EduPass

# Payment Gateways
# MVola
MVOLA_CLIENT_ID=your_mvola_client_id
MVOLA_CLIENT_SECRET=your_mvola_client_secret
MVOLA_MERCHANT_MSISDN=034XXXXXXX
MVOLA_BASE_URL=https://api.mvola.mg
MVOLA_AUTH_URL=https://auth.mvola.mg/oauth/token
MVOLA_CALLBACK_URL=https://edupass.mg/api/webhooks/mvola

# Orange Money
ORANGE_API_KEY=your_orange_api_key
ORANGE_MERCHANT_ID=your_merchant_id

# Airtel Money
AIRTEL_API_KEY=your_airtel_api_key
AIRTEL_MERCHANT_ID=your_merchant_id

# Security
BCRYPT_ROUNDS=12
HASH_DRIVER=bcrypt

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=warning
LOG_DEPRECATIONS_CHANNEL=null

# Broadcasting
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local

# AWS (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Monitoring (optional)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
